<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/view_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ViewNumTest"/>
        <Button
            android:id="@+id/line_pie_chart_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="line_pie_chart_view"/>
        <Button
            android:id="@+id/line_chart_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="line_chart_activty"/>
        <Button
            android:id="@+id/test_titlebar_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_titlebar_activty"/>
        <Button
            android:id="@+id/test_viewstub1_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_viewstub1_activty"/>
        <Button
            android:id="@+id/test_viewstub2_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_viewstub2_activty"/>
        <Button
            android:id="@+id/test_surfaceview_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_surfaceview_activty"
            fontPath="fonts/RobotoCondensed-Regular.ttf"
            tools:ignore="MissingPrefix"/>
        <Button
            android:id="@+id/test_round_progressbar_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_round_progressbar_activty"/>
        <Button
            android:id="@+id/test_piechart_activity_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_piechart_activity_activty"/>
        <Button
            android:id="@+id/test_actrotate_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_actrotate_activty"
            tools:ignore="MissingPrefix"
            fontPath="fonts/SF_Light.otf"/>
        <Button
            android:id="@+id/test_camera_animation_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test_camera_animation_activty"
            tools:ignore="MissingPrefix"
            android:textAllCaps="false"
            fontPath="fonts/SF_Regular.otf"
            />
        <Button
            android:id="@+id/test_camera_myserviceclient_activty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="MyServiceClientActivty"
            tools:ignore="MissingPrefix"
            android:textAllCaps="false"
            fontPath="fonts/SF_Regular.otf"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test_camera_animation_activty"
            tools:ignore="MissingPrefixa"
            fontPath="fonts/SF_Regular.otf"/>
    </LinearLayout>

</ScrollView>