<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recycleview_drap_with_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renlei.myapplication.recycleview.advancerecycleview.recycledragwithsection.RecycleviewDrapWithSection">

    <com.example.renlei.myapplication.recycleview.advancerecycleview.recycledragwithsection.HomeSceneScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/gateway_green"/>
                <ImageView
                    android:id="@+id/recommend_detail_place_hold"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:alpha="0"/>
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/transparent"/>
            <com.example.renlei.myapplication.recycleview.advancerecycleview.recycledragwithsection.widget.MyExpandableListView
                android:id="@+id/expand_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent"
                android:divider="@color/transparent"
                ></com.example.renlei.myapplication.recycleview.advancerecycleview.recycledragwithsection.widget.MyExpandableListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/gateway_green"/>
        </LinearLayout>

    </com.example.renlei.myapplication.recycleview.advancerecycleview.recycledragwithsection.HomeSceneScrollView>
</RelativeLayout>
