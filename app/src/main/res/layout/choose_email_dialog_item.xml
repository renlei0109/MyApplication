<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
   <ImageView
       android:id="@+id/choose_email_dialog_item_iv"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="15dp"
       android:src="@mipmap/default_head_image"
       android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_toRightOf="@id/choose_email_dialog_item_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/choose_email_dialog_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Chime Email"/>
        <TextView
            android:id="@+id/choose_email_dialog_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="renlei@gmail.com"/>
    </LinearLayout>
</RelativeLayout>