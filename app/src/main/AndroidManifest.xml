<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.renlei.myapplication" >

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/default_head_image"
        android:label="My Application"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PiechartActivityOld"
            android:label="@string/app_name" />
        <activity android:name=".StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumViewActivity"
            android:label="@string/title_activity_num_view" />
        <activity
            android:name=".chart.LineChartActivity"
            android:label="@string/title_activity_line_chart" />
        <activity
            android:name=".titlebar.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name=".titlebar.TestTitleBarActivity" />
        <activity android:name=".titlebar.TestTitleBarActivity2" />
        <activity android:name=".ViewStubAndIncludeTestActivity" />
        <activity android:name=".RoundProgressBarActivity" />
        <activity android:name=".chart.PieChartActivity" />
        <activity android:name=".chart.ActRotate" />
        <activity
            android:name=".SurfaceViewTestActivity"
            android:label="@string/title_activity_surface_view_test" />
        <activity android:name=".CameraAnimationActivity" />

        <service
            android:name=".service.MyService"
            android:exported="true"
            android:process="com.example.renlei.myapplication.service" >
            <intent-filter>
                <action android:name="com.renlei.MyService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity android:name=".service.MyServiceClientActivty" />
        <activity android:name=".pullrefresh.listview.PullRefreshActivity" />
        <activity
            android:name=".pullrefresh.listview.PullToRereshListViewActivity"
            android:label="@string/title_activity_pull_to_reresh_list_view" >
        </activity>
    </application>

</manifest>
